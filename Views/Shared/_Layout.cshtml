<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMCS.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CMCS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="lecturerDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Lecturers
                            </a>
                            <div class="dropdown-menu" aria-labelledby="lecturerDropdown" style="margin: 20px">
                                <a class="text-black dropdown-item" asp-area="" asp-controller="LecturerClaim" asp-action="Index">Submit Claim</a>
                                <a class="text-black dropdown-item" asp-area="" asp-controller="LecturerClaim" asp-action="TrackClaims">Track Claims</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="approverDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Programme Coordinators/Academic Managers
                            </a>
                            <div class="dropdown-menu" aria-labelledby="approverDropdown" style="margin: 20px">
                                <a class="text-black dropdown-item" asp-area="" asp-controller="ClaimApproval" asp-action="Index">Process Claims</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="HRDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                               HR
                            </a>
                            <div class="dropdown-menu" aria-labelledby="HRDropdown" style="margin: 20px">
                                <a class="text-black dropdown-item" asp-area="" asp-controller="HR" asp-action="AutoGenerateInvoices">AutoGenerateInvoices</a>
                                <a class="text-black dropdown-item" asp-area="" asp-controller="HR" asp-action="GetAllLecturers">Update Lecturer Details</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Profile
                            </a>
                            <div class="dropdown-menu" aria-labelledby="profileDropdown" style="margin: 20px">
                                <a class="text-black dropdown-item" asp-area="" asp-controller="UserManagement" asp-action="CreateUser">Register</a>
                                <a class="text-black dropdown-item" asp-area="" asp-controller="Authentication" asp-action="Login">Login</a>
                                <a class="text-black dropdown-item" asp-area="" asp-controller="Authentication" asp-action="Logout">Logout</a>
                            </div>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="text-align:center; height: 4em">
            
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script> 
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
