@model LecturerListResult

@{
    ViewData["Title"] = "Users List";
}

<h2>Users List</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Lecturer ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Lecturers)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.UserRole</td>
                <td>
                    <a href="@Url.Action("GetLecturerDetails", "HR", new { id = user.UserId })" class="btn btn-warning">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
