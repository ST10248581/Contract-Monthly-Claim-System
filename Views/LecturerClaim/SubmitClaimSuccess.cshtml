@{
    ViewBag.Title = "Claim Submission";
}

<div class="container mt-5">
    <div class="card text-center">
        <div class="card-body">
            <h1>Thank You!</h1>
            <h5 class="card-title">Your claim has been successfully submitted.</h5>
            <p class="card-text">We appreciate your time and effort in submitting the claim.</p>

            <div class="mt-4">
                <a href="@Url.Action("Index", "LecturerClaim")" class="btn btn-secondary bg-success">
                    Submit Another Claim
                </a>
                <a href="@Url.Action("TrackClaims", "LecturerClaim")" class="btn btn-secondary ml-3">
                    Track Submitted Claims
                </a>
            </div>
        </div>
        <div class="card-footer text-muted">
            Submitted on @DateTime.Now.ToString("MMMM dd, yyyy")
        </div>
    </div>
</div>
