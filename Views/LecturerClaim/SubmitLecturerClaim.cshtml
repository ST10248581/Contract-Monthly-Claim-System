@model LecturerClaimRequest

@* Include these if not already present *@
<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.0/jquery.validate.unobtrusive.min.js"></script>


@{
    ViewBag.Title = "Submit Claim";
}

<h2>Submit Claim for Hours Worked</h2>

<form asp-action="Index" asp-controller="LecturerClaim" enctype="multipart/form-data" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label for="HoursWorked">Hours Worked</label>
        <input asp-for="HoursWorked" class="form-control" placeholder="Enter hours worked" />
        <span asp-validation-for="HoursWorked" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="HourlyRate">Hourly Rate</label>
        <input asp-for="HourlyRate" class="form-control" placeholder="Enter hourly Rate" />
        <span asp-validation-for="HourlyRate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Selected Documents</label>
        <div class="form-control" id="selectedFiles"></div>
    </div>
    <div class="form-group">
        <label for="SupportingDocuments">Supporting Documents</label>
        <input type="file" id="fileUpload" name="SupportingDocuments" class="form-control" multiple />
        <span asp-validation-for="SupportingDocuments" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit Claim</button>
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.0/jquery.validate.unobtrusive.min.js"></script>

<script>
    document.getElementById('fileUpload').addEventListener('change', function (event) {
        var files = event.target.files;
        var output = document.getElementById('selectedFiles');
        output.innerHTML = ""; // Clear previous files
        for (var i = 0; i < files.length; i++) {
            var fileItem = document.createElement('p');
            fileItem.textContent = files[i].name;
            output.appendChild(fileItem);
        }
    });
</script>
